
generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// ============================================
// MULTI-TENANT BUSINESS MODEL
// ============================================

model Business {
  id          String   @id @default(cuid())
  name        String   // "Rise as One AAU" or "The Basketball Factory Inc"
  slug        String   @unique // URL-friendly identifier (rise-as-one, basketball-factory)
  description String?  @db.Text

  // Branding
  logoUrl     String?
  primaryColor   String   @default("#FF6B00") // Orange
  secondaryColor String   @default("#1A1A2E") // Dark blue

  // Contact Information
  email       String
  phone       String?
  address     String?
  city        String?
  state       String?
  zipCode     String?
  country     String   @default("US")
  website     String?

  // Business Settings
  timezone    String   @default("America/New_York")
  currency    String   @default("USD")
  taxEnabled  Boolean  @default(true)

  // Domain Configuration
  customDomain String?  @unique // e.g., "riseasone.com"
  subdomain    String?  @unique // e.g., "rise" for rise.platform.com

  // Status
  active      Boolean  @default(true)
  verified    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  credentials BusinessCredential?
  users       User[]
  products    Product[]
  orders      Order[]
  designs     Design[]
  discountCodes DiscountCode[]
  emailCampaigns EmailCampaign[]
  bulkOrders  BulkOrder[]
  giftCards   GiftCard[]
  shippingOptions ShippingOption[]

  @@index([slug])
  @@index([active])
}

model BusinessCredential {
  id          String   @id @default(cuid())
  businessId  String   @unique

  // Stripe Configuration (encrypted)
  stripePublishableKey  String?  @db.Text
  stripeSecretKey       String?  @db.Text
  stripeWebhookSecret   String?  @db.Text
  stripeAccountId       String?  // For Stripe Connect

  // Resend Email Configuration
  resendApiKey    String?  @db.Text
  emailFromName   String?
  emailFromAddress String?

  // Printify POD Configuration
  printifyApiKey  String?  @db.Text
  printifyShopId  String?
  printifyWebhookSecret String? @db.Text

  // AWS S3 Configuration (optional per-business)
  awsAccessKeyId     String?  @db.Text
  awsSecretAccessKey String?  @db.Text
  awsBucketName      String?
  awsRegion          String   @default("us-east-1")

  // Webhook Secrets
  webhookSecret    String?  @db.Text // General webhook verification

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
}

// ============================================
// USER & AUTHENTICATION MODELS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  businessId    String?   // Null for super admins, required for business users
  email         String    @unique
  firstName     String?
  lastName      String?
  password      String?
  role          UserRole  @default(USER)
  emailVerified DateTime?
  image         String?
  loyaltyPoints Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Marketing automation
  abandonedCartEmailSentAt DateTime?
  lastLoginAt              DateTime?

  business Business? @relation(fields: [businessId], references: [id])
  accounts Account[]
  sessions Session[]
  orders   Order[]
  cartItems CartItem[]
  viewedProducts ProductView[]
  chatMessages ChatMessage[]
  customizations ProductCustomization[]
  loyaltyTransactions LoyaltyTransaction[]
  userDesigns UserDesign[]
  reviews Review[]
  wishlists Wishlist[]
  discountUsages DiscountUsage[]
  bulkOrders BulkOrder[]
  apiKeys ApiKey[]
  priceAlerts PriceAlert[]

  @@index([businessId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id          String   @id @default(cuid())
  businessId  String   // Required - every product belongs to a business
  name        String
  description String   @db.Text
  price       Float
  category    Category
  imageUrl    String
  images      String[] @default([]) // Multiple product images for gallery
  sizes       String[] // JSON array of available sizes
  colors      String[] // JSON array of available colors
  stock       Int      @default(100) // Quantity in stock
  inStock     Boolean  @default(true)
  featured    Boolean  @default(false)
  designId    String?  // Link to uploaded design
  productType String?  // Product type (basketball-tshirt, basketball-jersey, etc.)
  placement   String?  // Design placement (chest, back, sleeve, etc.)
  brand       String   @default("Basketball Factory") // Product brand
  tags        String[] @default([]) // Product tags for search and filtering
  sku         String?  // Product SKU for inventory tracking and POD integration
  metadata    Json?    // Additional metadata for POD providers and other integrations
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // POD Provider Integration (Printify)
  printifyProductId  String?  // Product ID in Printify
  printifyVariantId  Int?     // Default variant ID for this product
  printifyBlueprintId Int?    // Blueprint ID for creating new products

  business   Business   @relation(fields: [businessId], references: [id])
  design     Design?    @relation(fields: [designId], references: [id])
  cartItems  CartItem[]
  orderItems OrderItem[]
  views      ProductView[]

  @@index([businessId])
}

model Design {
  id                 String       @id @default(cuid())
  businessId         String       // Required - every design belongs to a business
  name               String
  brand              String?      // Brand name (Rise as One AAU or The Basketball Factory Inc)
  imageUrl           String       // Uploaded design file URL
  logoUrl            String?      // Original logo URL
  colors             String[]     // Extracted colors from design
  basketballElements String?      @db.Text // JSON with AI analysis results
  aiAnalysis         String?      @db.Text // JSON with Vision AI analysis results
  averageScore       Float?       // Average score from AI analysis
  positionX          Float        @default(50)  // Horizontal position (percentage)
  positionY          Float        @default(35)  // Vertical position (percentage)
  scale              Float        @default(1.0) // Logo scale multiplier
  logoPositions      Json?        // Stores position data per product type for manual adjustments
  colorVariants      Json?        // Selected color variants for publishing
  status             DesignStatus @default(PENDING)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  business Business   @relation(fields: [businessId], references: [id])
  products Product[]

  @@index([businessId])
}

// AI Learning model - stores learned position preferences per product type
model LogoPositionLearning {
  id          String   @id @default(cuid())
  productType String   // basketball-tshirt, basketball-jersey, etc.
  brand       String   @default("default") // Brand preference learning
  x           Float    // Horizontal position
  y           Float    // Vertical position
  scale       Float    // Logo scale
  rotation    Float    @default(0) // Logo rotation
  timesUsed   Int      @default(1) // How many times this preference was used
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([productType, brand])
  @@index([productType])
  @@index([brand])
}

model CartItem {
  id        String @id @default(cuid())
  userId    String
  productId String
  quantity  Int    @default(1)
  size      String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, size, color])
}

model Order {
  id          String      @id @default(cuid())
  businessId  String      // Required - every order belongs to a business
  userId      String
  total       Float
  status      OrderStatus @default(PENDING)

  // Shipping Information
  shippingName      String
  shippingEmail     String?
  shippingAddress   String?
  shippingCity      String?
  shippingState     String?
  shippingZip       String?
  shippingCountry   String @default("US")

  // Billing Information
  billingName       String?
  billingAddress    String?
  billingCity       String?
  billingState      String?
  billingZip        String?
  billingCountry    String @default("US")

  // Payment Information (Stripe)
  stripeSessionId       String?
  stripePaymentIntentId String?

  // Fulfillment Information (Printify/POD)
  printifyOrderId String?
  trackingNumber  String?
  carrier         String?
  shippedAt       DateTime?
  deliveredAt     DateTime?
  notes           String?  @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business   Business    @relation(fields: [businessId], references: [id])
  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[]

  @@index([businessId])
}

model OrderItem {
  id            String @id @default(cuid())
  orderId       String
  productId     String
  quantity      Int
  price         Float // Price at time of order
  size          String?
  color         String?
  customization Json?  // Custom design data (logo URL, position, etc.)

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

enum UserRole {
  USER
  BUSINESS_ADMIN  // Admin for a specific business
  SUPER_ADMIN     // Platform admin with access to all businesses
  ADMIN           // Legacy - treat as BUSINESS_ADMIN
}

enum Category {
  PERFORMANCE_APPAREL
  CASUAL_WEAR
  ACCESSORIES
  POD_PRODUCTS
}

enum OrderStatus {
  PENDING
  PENDING_PAYMENT
  PAID
  PAYMENT_FAILED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  FULFILLMENT_ERROR
  ON_HOLD
}

enum DesignStatus {
  PENDING
  APPROVED
  REJECTED
}

// Phase 4: Advanced AI Features Models

model ProductView {
  id        String   @id @default(cuid())
  userId    String
  productId String
  viewedAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([userId, viewedAt])
}

model ChatMessage {
  id        String      @id @default(cuid())
  userId    String?
  sessionId String      // For anonymous users
  message   String      @db.Text
  response  String      @db.Text
  isBot     Boolean     @default(false)
  sentiment String?     // POSITIVE, NEUTRAL, NEGATIVE
  createdAt DateTime    @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([userId])
}

model ProductCustomization {
  id            String                 @id @default(cuid())
  userId        String
  productId     String?
  designUrl     String?                // Custom design uploaded by customer
  notes         String                 @db.Text
  status        CustomizationStatus    @default(PENDING)
  estimatedPrice Float?
  aiSuggestions  String?               @db.Text // JSON with AI recommendations
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model LoyaltyTransaction {
  id          String              @id @default(cuid())
  userId      String
  points      Int                 // Can be positive (earned) or negative (spent)
  type        LoyaltyType
  description String
  orderId     String?
  createdAt   DateTime            @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum CustomizationStatus {
  PENDING
  IN_REVIEW
  APPROVED
  IN_PRODUCTION
  COMPLETED
  REJECTED
}

enum LoyaltyType {
  PURCHASE
  REFERRAL
  SIGNUP
  REVIEW
  SOCIAL_SHARE
  REDEMPTION
}

// Phase 5: Advanced Commerce & Engagement Models

model Review {
  id              String   @id @default(cuid())
  userId          String
  productId       String
  rating          Int      // 1-5 stars
  title           String
  comment         String   @db.Text
  photos          String[] // Array of photo URLs
  verifiedPurchase Boolean @default(false)
  helpfulCount    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
  @@index([rating])
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  productId String
  notes     String?
  addedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
}

model DiscountCode {
  id               String         @id @default(cuid())
  businessId       String         // Required - discount codes are per business
  code             String
  description      String
  discountType     DiscountType
  discountValue    Float          // Percentage or fixed amount
  minPurchase      Float?         // Minimum purchase amount
  maxDiscount      Float?         // Maximum discount amount (for percentage)
  usageLimit       Int?           // Total usage limit
  usageCount       Int            @default(0)
  perUserLimit     Int?           // Per user usage limit
  validFrom        DateTime
  validUntil       DateTime
  active           Boolean        @default(true)
  applicableCategories String[]    // Empty means all categories
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  business Business       @relation(fields: [businessId], references: [id])
  usages   DiscountUsage[]

  @@unique([businessId, code]) // Code must be unique within a business
  @@index([code])
  @@index([active])
  @@index([businessId])
}

model DiscountUsage {
  id             String   @id @default(cuid())
  userId         String
  discountCodeId String
  orderId        String
  discountAmount Float
  usedAt         DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  discountCode DiscountCode @relation(fields: [discountCodeId], references: [id])

  @@index([userId])
  @@index([discountCodeId])
}

model GiftCard {
  id          String          @id @default(cuid())
  businessId  String          // Required - gift cards are per business
  code        String
  initialValue Float
  balance     Float
  purchasedBy String?         // User who purchased it
  status      GiftCardStatus  @default(ACTIVE)
  expiresAt   DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  business     Business           @relation(fields: [businessId], references: [id])
  transactions GiftCardTransaction[]

  @@unique([businessId, code]) // Code must be unique within a business
  @@index([code])
  @@index([status])
  @@index([businessId])
}

model GiftCardTransaction {
  id          String   @id @default(cuid())
  giftCardId  String
  userId      String?
  orderId     String?
  amount      Float    // Negative for redemption, positive for reload
  description String
  createdAt   DateTime @default(now())

  giftCard GiftCard @relation(fields: [giftCardId], references: [id])

  @@index([giftCardId])
}

model BulkOrder {
  id          String         @id @default(cuid())
  businessId  String         // Required - bulk orders are per business
  userId      String
  teamName    String
  status      BulkOrderStatus @default(PENDING)
  totalAmount Float?
  notes       String?        @db.Text
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  business Business        @relation(fields: [businessId], references: [id])
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  items    BulkOrderItem[]

  @@index([businessId])
  @@index([userId])
  @@index([status])
}

model BulkOrderItem {
  id          String @id @default(cuid())
  bulkOrderId String
  productId   String
  playerName  String
  playerNumber String?
  size        String
  color       String
  quantity    Int    @default(1)

  bulkOrder BulkOrder @relation(fields: [bulkOrderId], references: [id], onDelete: Cascade)

  @@index([bulkOrderId])
}

model EmailCampaign {
  id          String              @id @default(cuid())
  businessId  String              // Required - email campaigns are per business
  name        String
  subject     String
  content     String              @db.Text
  status      EmailCampaignStatus @default(DRAFT)
  scheduledFor DateTime?
  sentAt      DateTime?
  recipientCount Int?
  openCount   Int                 @default(0)
  clickCount  Int                 @default(0)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  business Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
  @@index([status])
}

model ShippingOption {
  id            String  @id @default(cuid())
  businessId    String  // Required - shipping options are per business
  name          String
  description   String
  basePrice     Float
  estimatedDays String  // e.g., "3-5 business days"
  active        Boolean @default(true)
  priority      Int     @default(0) // Display order

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model PriceAlert {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  targetPrice Float
  notified    Boolean  @default(false)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([productId])
  @@index([notified])
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
  FREE_SHIPPING
  BOGO
}

enum GiftCardStatus {
  ACTIVE
  REDEEMED
  EXPIRED
  CANCELLED
}

enum BulkOrderStatus {
  PENDING
  REVIEWING
  APPROVED
  IN_PRODUCTION
  COMPLETED
  CANCELLED
}

enum EmailCampaignStatus {
  DRAFT
  SCHEDULED
  SENT
  CANCELLED
}

// Phase 6: Production Readiness Models

model Return {
  id            String       @id @default(cuid())
  orderId       String
  userId        String
  reason        ReturnReason
  description   String       @db.Text
  status        ReturnStatus @default(PENDING)
  refundAmount  Float?
  refundMethod  String?      // Original payment method, gift card, etc.
  returnLabel   String?      // S3 URL for return label
  trackingNumber String?
  requestedAt   DateTime     @default(now())
  processedAt   DateTime?
  completedAt   DateTime?

  items ReturnItem[]

  @@index([orderId])
  @@index([userId])
  @@index([status])
}

model ReturnItem {
  id        String @id @default(cuid())
  returnId  String
  productId String
  quantity  Int
  reason    String?

  return Return @relation(fields: [returnId], references: [id], onDelete: Cascade)

  @@index([returnId])
}

model Shipment {
  id              String         @id @default(cuid())
  orderId         String         @unique
  carrier         String         // UPS, FedEx, USPS, etc.
  trackingNumber  String?
  shippingMethod  String
  shippingCost    Float
  estimatedDelivery DateTime?
  actualDelivery  DateTime?
  status          ShipmentStatus @default(PENDING)
  labelUrl        String?        // Shipping label URL
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  trackingEvents TrackingEvent[]

  @@index([orderId])
  @@index([trackingNumber])
}

model TrackingEvent {
  id          String   @id @default(cuid())
  shipmentId  String
  status      String   // In Transit, Out for Delivery, Delivered, etc.
  location    String
  description String
  timestamp   DateTime
  createdAt   DateTime @default(now())

  shipment Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  @@index([shipmentId])
}

model TaxRate {
  id          String   @id @default(cuid())
  state       String
  county      String?
  city        String?
  zipCode     String?
  rate        Float    // Decimal format (e.g., 0.0825 for 8.25%)
  type        String   // STATE, COUNTY, CITY
  active      Boolean  @default(true)
  effectiveFrom DateTime
  effectiveTo   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([state, zipCode])
  @@index([active])
}

model ProductComparison {
  id          String   @id @default(cuid())
  userId      String?
  sessionId   String   // For anonymous users
  productIds  String[] // Array of product IDs (max 4)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
}

model SizeGuide {
  id          String   @id @default(cuid())
  category    Category
  sizeName    String   // S, M, L, XL, etc.
  chest       String   // Measurement in inches
  waist       String
  hip         String?
  length      String
  weight      String?  // Recommended weight range
  height      String?  // Recommended height range
  fitType     FitType  @default(REGULAR)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model CustomerFit {
  id          String   @id @default(cuid())
  userId      String
  height      Float    // In inches
  weight      Float    // In pounds
  chest       Float?   // In inches
  waist       Float?
  preferredFit FitType @default(REGULAR)
  shirtSize   String?
  shortsSize  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId])
}

model AbandonedCart {
  id              String   @id @default(cuid())
  userId          String?
  sessionId       String   // For anonymous users
  email           String
  cartValue       Float
  itemCount       Int
  recovered       Boolean  @default(false)
  emailSent       Boolean  @default(false)
  emailSentAt     DateTime?
  recoveredAt     DateTime?
  recoveredOrderId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([email])
  @@index([recovered])
  @@index([emailSent])
}

model CustomerSegment {
  id          String   @id @default(cuid())
  name        String
  description String?
  criteria    String   @db.Text // JSON with segment rules
  userCount   Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([active])
}

model SalesForecast {
  id          String   @id @default(cuid())
  forecastDate DateTime
  category    Category?
  productId   String?
  predictedSales Float
  confidence  Float    // 0-1
  actualSales Float?
  factors     String?  @db.Text // JSON with influencing factors
  createdAt   DateTime @default(now())

  @@index([forecastDate])
  @@index([category])
}

model CustomerLifetimeValue {
  id                  String   @id @default(cuid())
  userId              String   @unique
  totalSpent          Float
  orderCount          Int
  avgOrderValue       Float
  predictedLTV        Float
  segment             String   // HIGH_VALUE, MEDIUM_VALUE, LOW_VALUE, AT_RISK
  lastPurchaseDate    DateTime?
  daysSinceLastPurchase Int?
  calculatedAt        DateTime @default(now())

  @@index([segment])
  @@index([predictedLTV])
}

enum ReturnReason {
  WRONG_SIZE
  DEFECTIVE
  NOT_AS_DESCRIBED
  CHANGED_MIND
  ORDERED_WRONG_ITEM
  QUALITY_ISSUE
  OTHER
}

enum ReturnStatus {
  PENDING
  APPROVED
  REJECTED
  RETURN_RECEIVED
  REFUND_PROCESSED
  COMPLETED
}

enum ShipmentStatus {
  PENDING
  LABEL_CREATED
  PICKED_UP
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  EXCEPTION
  RETURNED
}

enum FitType {
  SLIM
  REGULAR
  RELAXED
  OVERSIZED
}

model ApiKey {
  id          String   @id @default(cuid())
  key         String   @unique // Consumer Key (ck_xxxxx)
  secret      String   // Consumer Secret (cs_xxxxx)
  userId      String
  name        String   @default("WooCommerce Integration")
  permissions String[] // e.g., ["read", "write"]
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
}

model Webhook {
  id          String   @id @default(cuid())
  name        String
  topic       String   // e.g., "order.created", "order.updated"
  deliveryUrl String   // URL to send webhook notifications
  status      String   @default("active") // "active" or "paused"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([topic])
  @@index([status])
}

model UserDesign {
  id               String   @id @default(cuid())
  userId           String
  name             String
  brand            String   @default("Rise as One AAU")
  logoUrl          String   // S3 path to uploaded logo
  status           String   @default("UPLOADED") // UPLOADED, PROCESSING, READY, COMPLETED
  mockupsGenerated Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mockups          UserMockup[]

  @@index([userId])
  @@index([status])
}

model UserMockup {
  id            String   @id @default(cuid())
  designId      String
  productType   String   // tshirt, hoodie, jersey, etc.
  angle         String   // front, back, side, etc.
  color         String   // red, black, white, grey
  mockupUrl     String   // S3 path to generated mockup
  positionX     Float    @default(50)
  positionY     Float    @default(35)
  scale         Float    @default(1.0)
  approved      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  design        UserDesign @relation(fields: [designId], references: [id], onDelete: Cascade)

  @@index([designId])
}
